<div class="modal fade" id="write-review" tabindex="-1" role="dialog"
                              aria-labelledby="dialogHeader" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    <%= form_for(@review, url: creator_reviews_path(@creator)) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
                                            aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="dialogHeader">Edit name</h4>
      </div>
      <div class="modal-body">
        <%= f.label :"Write a review" %>
        <%= f.text_area :body, class: 'form-control' %>
        <%= f.hidden_field :user_name, :value => current_user.nickname %>
      </div>
      <div class="modal-footer">
        <%= f.submit "Submit", class: "btn btn-primary submit-button",
                                          data: { disable_with: "送信中..." } %>
      </div>
      <% end %>
    </div>
  </div>
</div>
